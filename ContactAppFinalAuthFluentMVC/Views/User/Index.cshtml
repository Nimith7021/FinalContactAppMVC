@{
    ViewBag.Title = "Index";
}
<head>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
</head>
@if (User.IsInRole("Admin"))
{
    <h2> Welcome To Admin Panel </h2>
}

@if (User.IsInRole("Staff"))
{
    <div class="listItems container">
        <h1>Welcome to Staff Panel</h1>
        <p>
            <button type="button" class="btn btn-outline-success" id="btnAdd">
                Add New Contact
            </button>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        IsActive
                    </th>
                </tr>
            </thead>

            <tbody id="tblBody">
            </tbody>
        </table>
    </div>
    <div style="display:none" class="container" id="newRecord">
        @Html.Partial("_AddRecordPartial")
    </div>

    <table id="grid"></table>


    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/redmond/jquery-ui.css">
    <script src="~/Scripts/myGrid.js"></script>
    <script src="~/Scripts/MyCrud.js"></script>
    <script>
        $(document).ready(() => {
            loadItems();
        })
    </script>

}

